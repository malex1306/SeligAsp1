@{
    Layout = null;
}
@model Einkaufsliste.Models.Position
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
<div class="container mt-5">
    <h2 class="text-center mb-4">Artikel zur Einkaufsliste hinzufügen</h2>
    
    <form asp-action="ArtikelForm" method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Artikelnamen</label>
                <input asp-for="Name" class="form-control" placeholder="z.B. Milch"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="Anzahl" class="form-label">Anzahl</label>
                <input asp-for="Anzahl" class="form-control" placeholder="z.B. 2"/>
                <span asp-validation-for="Anzahl" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label asp-for="Geschaeft" class="form-label">Geschäft</label>
                <input asp-for="Geschaeft" class="form-control" placeholder="z.B. Milch"/>
                <span asp-validation-for="Geschaeft" class="text-danger"></span>
            </div>
            
            <div class="col-12">
                <button type="submit" class="btn btn-success w-100 mt-3">Artikel hinzufügen</button>
            </div>
        </div>
    </form>
</div>
</body>
</html>